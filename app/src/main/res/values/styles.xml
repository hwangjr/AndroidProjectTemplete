<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="homeAsUpIndicator">@drawable/arrow_left</item>
        <!--   your app's branding color (for the app bar) -->
        <item name="colorPrimary">@color/orange</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/wheat</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/wheat</item>
        <item name="android:homeAsUpIndicator">@drawable/arrow_left</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
